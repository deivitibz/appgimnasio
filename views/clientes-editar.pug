extends layout

block content
    .container
        form(action="/clientes/update", method="POST")
            .form-group
                .row
                    .col-6
                        label Nombre
                        input.form-control(type='text' name="nombre" value=cliente.nombre)
                    .col-6
                        label Apellidos
                        input.form-control(type='text' name="apellidos" value=cliente.apellidos)
            .form-group
                label Direccion
                input.form-control(type='text' name="direccion" value=cliente.direccion)
            .form-group
                label Email
                input.form-control(type='text' name="email" value=cliente.email)
            .form-group
                .row
                    .col
                        label Edad
                        input.form-control(type='text' name="edad" value=cliente.edad)
            .form-group
                label Sexo
                select.form-control
                    option(value="") Selecciona tu sexo
                    option(value="H") Hombre
                    option(value="M") Mujer
            .form-group
                label Dni
                input.form-control(type='text' name="dni" value=cliente.dni)
            .form-check
                input#exampleCheck1.form-check-input(type='checkbox')
                label.form-check-label(for='exampleCheck1') Check me out
            input(type="hidden", name="idCliente", value=cliente.id)
            button.btn.btn-primary.mt-3(type='submit') Submit
